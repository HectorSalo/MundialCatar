<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.extras.ExtrasFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_groups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="32dp"
        app:strokeWidth="2dp"
        app:cardCornerRadius="32dp"
        android:backgroundTint="?attr/colorOnSurfaceInverse"
        android:outlineSpotShadowColor="@color/jacksons_purple"
        tools:targetApi="p">

        <ImageView
            android:id="@+id/iv_groups"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/image_groups"/>

        <TextView
            android:id="@+id/tv_title_groups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_round_groups"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="16dp"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/white"
            android:layout_gravity="bottom"/>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_playoff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="?attr/colorOnSurfaceInverse"
        android:outlineSpotShadowColor="@color/jacksons_purple"
        app:cardCornerRadius="32dp"
        app:cardElevation="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_groups"
        app:strokeWidth="2dp"
        tools:targetApi="p">

        <ImageView
            android:id="@+id/iv_playoff"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/image_playoff"/>

        <TextView
            android:id="@+id/tv_title_playoff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="24dp"
            android:text="@string/text_round_playoff"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/white" />
    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:text="@string/text_settings"
        app:icon="@drawable/ic_settings_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>